#!/bin/sh
#
# makedist
#
# gets the latest cvs tree and tars it up as $version
#

progname="netmrg"
version=`cat share/doc/VERSION`
cvsver=`echo $version | sed -e 's/\./-/'`
this="$progname-$version"
pkgdir="/tmp"

cd $pkgdir

rm -rf $this/
rm -f $this.tar.gz

cvs export -r $progname"_"$cvsver -d $this $progname
tar czf $this.tar.gz $this
