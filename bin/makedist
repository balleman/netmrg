#!/bin/sh
#
# makedist
#
# gets the latest cvs tree and tars it up as $version
#

progname="netmrg"
version=`cat share/doc/VERSION`
cvsver=`echo $version | sed -e 's/\./_/g'`
this="$progname-$version"
pkgdir="/tmp"

rm -rf $pkgdir/$this/
rm -f $pkgdir/$this.tar.gz
rm -f $pkgdir/$this.tar.bz2

svn export -q http://svn.$progname.net/branches/$progname-$cvsver $pkgdir/$this
tar -C $pkgdir -czf $pkgdir/$this.tar.gz  $this
tar -C $pkgdir -cjf $pkgdir/$this.tar.bz2 $this

